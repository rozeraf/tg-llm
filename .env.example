# Telegram Bot Configuration
TELEGRAM_TOKEN=""
API_KEY=

# PostgreSQL Database Configuration
POSTGRES_HOST=
POSTGRES_PORT=
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=

# Redis Configuration (for caching and rate limiting)
REDIS_URL=
REDIS_PASSWORD=

# Security Configuration
# Master encryption key will be auto-generated on first run
# ENCRYPTION_KEY=O17BS9ItoLxa5OhRpeCYe2UG9tk8gFJn0zKMRA-_hJg=

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_MESSAGE_LENGTH=4000

# Performance Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
MAX_WORKERS=4
ASYNC_TIMEOUT=180

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5
SENTRY_DSN=  # Optional: Sentry for error tracking

# Feature Flags
ENABLE_MONITORING=false
ENABLE_METRICS=true
ENABLE_FILE_UPLOAD=true
ENABLE_WEB_SEARCH=true
ENABLE_VISION_API=false

# LLM Configuration Defaults
DEFAULT_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
DEFAULT_MODEL=mistralai/mistral-7b-instruct:free
DEFAULT_REASONING_MODEL=deepseek/deepseek-r1-distill-llama-70b
DEFAULT_ROUTER_MODEL=anthropic/claude-3.5-sonnet:beta
DEFAULT_SYSTEM_PROMPT="You are a helpful assistant."
DEFAULT_CONTEXT_COUNT=10

# File Processing Configuration
UPLOAD_DIR=./uploads
TEMP_FILE_CLEANUP_HOURS=24
MAX_GLOBAL_CONTEXT_MB=10

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_DAYS=15

# Backup Configuration (optional)
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Development Configuration
DEBUG=false
TESTING=false
MOCK_LLM_RESPONSES=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_START_PERIOD=60

# External Services Configuration
DUCKDUCKGO_API_URL=https://api.duckduckgo.com/
TESSERACT_CONFIG=--psm 6 -l eng+rus

# Security Headers and CORS (if web interface is added)
ALLOWED_ORIGINS=localhost,127.0.0.1
CORS_ENABLED=false

# Environment
NODE_ENV=production
TZ=UTC